{
    "name": "GitHub Issue Button",
    "version": "1.0",
    "description": "Adds a button to GitHub issue pages.",
    "manifest_version": 3,
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://github.com/*"],
    "action": {
      "default_title": "GitHub Issue Button"
    },
    "content_scripts": [
      {
        "matches": ["https://github.com/*/*/issues/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  