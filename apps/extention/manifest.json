{
    "manifest_version": 3,
    "name": "Git Earn",
    "version": "1.0",
    "description": "Add bounties to GitHub issues.",
    "permissions": ["scripting", "storage"],
    "host_permissions": ["https://github.com/*"],
    "content_scripts": [
      {
        "matches": ["https://github.com/*"],
        "js": ["content.js"],
        "css": ["assets/content-B8lYIPta.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["*"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_title": "Git Earn"
    }
  }
  