{
    "manifest_version": 3,
    "name": "GitHub Bounty Extension",
    "description": "Adds a Bounty button to GitHub issues",
    "version": "1.0.0",
    "permissions": ["activeTab"],
    "host_permissions": ["https://github.com/*"],
    "content_scripts": [
      {
        "matches": ["https://github.com/*/*/issues/*"],
        "js": ["src/content.js"],
        "css": ["assets/styles-wm1KTgpq.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["src/assets/*", "dist/assets/*", "src/injectApp.js"],
        "matches": ["https://github.com/*"]
      }
    ]
  }